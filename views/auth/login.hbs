<h2>Login</h2>

<form action="/auth/login" method="POST">
  <label for="email">email</label>
  <input type="email" name="email" />
  <label for="password">password</label>
  <input type="password" name="password" />
  <button>login</button>
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>